@model IEnumerable<WebClientes.Models.M_Mesas>

<h2>Lista de Mesas</h2>
<p>
    @Html.ActionLink("Nueva Mesa", "AgregarMesas")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdMesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroMesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionMesa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>    
            @Html.DisplayFor(modelItem => item.IdMesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroMesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionMesa)
        </td>
        <td>
            @Html.ActionLink("Editar", "ModificaMesa", new { id= item.IdMesa }) |
            @Html.ActionLink("Descripcion", "DetalleMesa", new { id = item.IdMesa }) |
            @Html.ActionLink("Eliminar", "EliminaMesa", new { id = item.IdMesa })
        </td>
    </tr>
}

</table>
