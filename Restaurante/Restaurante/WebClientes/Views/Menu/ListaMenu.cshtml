@model IEnumerable<WebClientes.Models.M_Menu>

<h2>Menu</h2>
<p>
    @Html.ActionLink("Nuevo Plato", "AgregarMenu")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Editar", "ModificaMenu", new { id= item.IdMenu }) |
            @Html.ActionLink("Descripcion", "DetalleMenu", new { id = item.IdMenu }) |
            @Html.ActionLink("Eliminar", "EliminaMenu", new { id= item.IdMenu })
        </td>
    </tr>
}

</table>
